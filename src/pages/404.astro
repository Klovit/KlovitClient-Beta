---
import '../styles/globals.css'
import db from '../database';
const config = await db.get("config")
import Footer from '../components/footer.astro';
const { cookies, redirect } = Astro;
const website = config.website ?? {};

const icon = website.icon ?? "https://docs.klovit.tech/img/Klovit%20Logo.png"
const description = website.description ?? "KlovitClient"
const hostname = website.name ?? "KlovitClient"

const year = new Date().getFullYear().toString()
const yearWithTitle = `${year} ${hostname}`
---
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content=`${description} | Powered by KlovitClient.`>
        <meta name="keywords" content=`KlovitClient, Hosting, Klovit, Freemium Minecraft Hosting, ${hostname}, Cloud, Minecraft, Servers, Free Servers, Hostings that use KlovitClient`>
        <meta name="author" content=`Klovit`>
        <meta name="copyright" content=`${hostname}`>
        <meta property="og:type" content=`website`>
        <meta property="og:title" content=`${hostname}`>
        <meta property="og:description" content=`${description} | Powered by KlovitClient`>
        <meta property="og:image" content=`${icon}`>
        <meta name="twitter:card" content=`${icon}`>
        <meta name="twitter:title" content=`${hostname}`>
        <meta name="twitter:description" content=`${description} | Powered by KlovitClient`>
        <meta name="twitter:image" content=`${icon}`>
        <meta name="twitter:image:src" content=`${icon}`>
        <title>{hostname} | 404: NOT FOUND</title>
      
        <script src="https://cdn.tailwindcss.com"></script>
        <link href={icon} rel="icon">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
        <script src="https://kit.fontawesome.com/cf4342c927.js" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/flowbite.min.js"></script>
      </head>

      
      
      <body class="bg-zinc-950 flex flex-col items-center h-screen justify-center">
        <h1 class="text-transparent bg-clip-text bg-gradient-to-br from-white to-transparent font-bold text-5xl uppercase">404: not found</h1>
    </body>
      
      </html>